{
  "name": "cssu-rewards",
  "version": "1.0.0",
  "description": "CSSU Reward System",
  "type": "module",
  "main": "index.js",

  "scripts": {
    "createsuperuser": "node prisma/createsu.js",
    "clean": "rm -rf prisma/dev.db* node_modules package-lock.json prisma/migrations/",
    "seed": "node prisma/seed.js",
    "build": "npm install --production && npx prisma generate && npx prisma migrate deploy",
    "start": "node --max-old-space-size=256 index.js"
  },

  "prisma": {
    "seed": "node prisma/seed.js"
  },

  "dependencies": {
    "@prisma/client": "^6.19.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "express-jwt": "^8.5.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.11",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0",
    "zod": "^3.24.2"
  },

  "devDependencies": {
    "nodemon": "^3.1.11",
    "prisma": "^6.19.0"
  }
}
