# Example environment variables for local development
# Copy this file to `.env` and fill in real values before running the server.

# JWT secret used to sign/verify JSON Web Tokens (DO NOT COMMIT a real secret)
JWT_SECRET=your_jwt_secret_here_change_before_deploy

# The URL of your frontend application (used for CORS configuration)
# Default Vite port is usually 5173
FRONTEND_URL=http://localhost:5173

# API Key for Resend (Email Service)
# Required to prevent server crash on startup and to send verification/reset emails.
# You can use a placeholder like "re_123" if you are just testing locally and don't need emails to actually send.
RESEND_API_KEY=re_123456789_placeholder_key
